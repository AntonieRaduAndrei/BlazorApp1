<h3>Categories</h3>
@page "/categories"
@using BlazorApp1.Models;
@using BlazerApp1.Services;
@inject CategoryService Service;


<ul>
    @foreach (var category in Service.GetCategories())
    {
        <li>
            <input @bind="category.Name" />
            <button @onclick="()=>Service.DeleteCategory(category.Id)">Delete category</button>
        </li>
    }
</ul>

<input placeholder="Category to add" @bind="category.Name" />
<button @onclick="()=>{category.Id = 0; Service.AddCategory(category);}">Add category</button>

